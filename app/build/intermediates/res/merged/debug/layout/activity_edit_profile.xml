<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="EDIT PROFILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_tittle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="112dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/label_tittle"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters|textPersonName"
        android:text="Edit Name"
        android:ems="10"
        android:id="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.47"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_edit_ok"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintRight_toRightOf="@+id/label_tittle"
        app:layout_constraintLeft_toLeftOf="@+id/label_tittle"
        android:background="@drawable/rectangle_shape"
        android:textColor="#FFFFFF" />
</android.support.constraint.ConstraintLayout>