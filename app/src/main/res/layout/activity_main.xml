<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.co.dycode.ghopunz.biodata.MainActivity">

    <!--background for photo-->
    <ImageView
        android:background="@drawable/circular_shape"

        android:id="@+id/bg_foto"
        app:layout_constraintTop_toTopOf="@+id/foto"
        app:layout_constraintLeft_toLeftOf="@+id/foto"
        android:adjustViewBounds="false"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/foto"
        app:layout_constraintRight_toRightOf="@+id/foto" />

    <!--photo-->
    <id.co.dycode.ghopunz.biodata.CustomImageViewCircularShape
        android:src="@drawable/blackrose"
        android:background="@drawable/circular_shape"
        android:id="@+id/foto"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="136dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="false"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:cropToPadding="true"
        android:scaleType="centerInside" />

    <TextView
        android:text="ABDUL GHOFUR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/foto"
        app:layout_constraintLeft_toLeftOf="@+id/foto"
        app:layout_constraintRight_toRightOf="@+id/foto"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textAllCaps="true" />

    <TextView
        android:text="Bachelor of Computer Science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="@+id/label_name"
        app:layout_constraintRight_toRightOf="@+id/label_name"
        android:textColor="#005555"
        app:layout_constraintTop_toBottomOf="@+id/label_name"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="EDUCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_edu"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/label_email"
        app:layout_constraintLeft_toLeftOf="@+id/label_email"
        app:layout_constraintRight_toRightOf="@+id/label_email" />

    <TextView
        android:text="2009 - 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_year_edu"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#005555"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_edu"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="2012"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_year_edu2"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#005555"
        app:layout_constraintLeft_toLeftOf="@+id/label_year_edu"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_year_edu" />

    <TextView
        android:text="Universitas Pendidikan Indonesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/label_campus"
        app:layout_constraintTop_toTopOf="@+id/label_year_edu"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/label_year_edu" />

    <TextView
        android:text="CCNA - InformIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/label_campus"
        app:layout_constraintTop_toTopOf="@+id/label_year_edu2" />

    <TextView
        android:text="ORGANIZATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_org"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="normal|bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/label_edu"
        app:layout_constraintRight_toRightOf="@+id/label_edu" />

    <TextView
        android:text="2011 - 2012"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_year_org"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/label_org"
        android:textColor="#005555"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="2010 - 2011"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_year_org2"
        app:layout_constraintLeft_toLeftOf="@+id/label_year_org"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_year_org"
        android:textColor="#005555" />

    <TextView
        android:text="BEM KEMAKOM FPMIPA - UPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_rema"
        app:layout_constraintTop_toTopOf="@+id/label_year_org2"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />

    <TextView
        android:text="BEM REMA UPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/label_year_org"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/label_year_org" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_profile"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/label_rema"
        app:layout_constraintLeft_toLeftOf="@+id/label_org"
        app:layout_constraintRight_toRightOf="@+id/label_org"
        android:background="@drawable/rectangle_shape"
        android:textColor="#FFFFFF" />

</android.support.constraint.ConstraintLayout>
